{% extends 'backOffice/base.html.twig' %}

{% block title %}Nutrition{% endblock %}

{% block body %}
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-4 align-items-center">
            <div class="col-lg-6">
                    <div class="about-img position-relative overflow-hidden p-5 pe-0">
                        {% if nutrition.image %}
                            <img class="img-fluid w-100" src="{{ asset('uploads/images/ingredient/' ~ nutrition.image) }}" alt="Ingredient Image">
                        {% endif %}
                    </div>
                </div>
                <div class="col-lg-6">
                    <h1 class="mb-6">Nutrition</h1>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ nutrition.id }}</td>
                            </tr>
                            <tr>
                                <th>UserId</th>
                                <td>{{ nutrition.userId }}</td>
                            </tr>
                            <tr>
                                <th>IdIngredient</th>
                                <td>{{ nutrition.idIngredient }}</td>
                            </tr>
                            <tr>
                                <th>IdRecette</th>
                                <td>{{ nutrition.idRecette }}</td>
                            </tr>
                            <tr>
                                <th>Calories</th>
                                <td>{{ nutrition.calories }}</td>
                            </tr>
                            <tr>
                                <th>Carbs</th>
                                <td>{{ nutrition.carbs }}</td>
                            </tr>
                            <tr>
                                <th>Fat</th>
                                <td>{{ nutrition.fat }}</td>
                            </tr>
                            <tr>
                                <th>Fiber</th>
                                <td>{{ nutrition.fiber }}</td>
                            </tr>
                            <tr>
                                <th>Protein</th>
                                <td>{{ nutrition.protein }}</td>
                            </tr>
                            <tr>
                                <th>Vitamines</th>
                                <td>{{ nutrition.vitamines }}</td>
                            </tr>
                            <tr>
                                <th>Image</th>
                                <td>{{ nutrition.image }}</td>
                            </tr>
                        </tbody>
                    </table>
                
                <div class="d-flex">
                    <div class="d-flex">
                        <a class="btn btn-primary py-3 px-5 me-3" href="{{ path('app_nutrition_edit', {'id': nutrition.id}) }}">Edit</a>
                        <form action="{{ path('app_nutrition_delete', {'id': nutrition.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ nutrition.id) }}">
                            <button type="submit" class="btn btn-danger py-3 px-5 me-3">Delete</button>
                        </form>
                        <a class="btn btn-secondary py-3 px-5" href="{{ path('app_nutrition_index') }}">
                            <i class="ti-arrow-left"></i>
                            Back to list</a>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        {% if error_message is defined %}
            const errorMessage = "{{ error_message }}";
            if (errorMessage) {
                alert(errorMessage);
            }
        {% endif %}
    });
</script>
{% endblock %}
