{% extends '/backOffice/base.html.twig' %}
{% block title %}Regime{% endblock %}
{% block body %}
<style>
    /* Styles CSS personnalisés */
    body {
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #007bff; /* Bleu */
        text-align: center;
    }

    .table {
        width: 50%;
        margin: 20px auto;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ccc;
        text-align: left;
    }

    th {
        background-color: #f2f2f2; /* Gris clair */
    }

    a.button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #007bff; /* Bleu */
        color: #fff; /* Blanc */
        text-decoration: none;
        border-radius: 5px;
        margin: 10px;
    }

    a.button:hover {
        background-color: #0056b3; /* Bleu foncé au survol */
    }

    .delete-form {
        margin-top: 20px;
        text-align: center;
    }

    .delete-form input[type="submit"] {
        background-color: #dc3545; /* Rouge */
        color: #fff; /* Blanc */
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    .delete-form input[type="submit"]:hover {
        background-color: #c82333; /* Rouge foncé au survol */
    }
</style>

<h1>Regime</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ regime.id }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ regime.date ? regime.date|date('Y-m-d') : '' }}</td>
        </tr>
    </tbody>
</table>

<a href="{{ path('app_regime_index') }}" class="button">Back to List</a>



{% endblock %}
{% block js %}
{% endblock %}
