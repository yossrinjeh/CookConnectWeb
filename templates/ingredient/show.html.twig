{% extends 'backOffice/base.html.twig' %}
{% block title %}Ingredient{% endblock %}

{% block body %}
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-4 align-items-center">
                <div class="col-lg-6">
                    <div class="about-img position-relative overflow-hidden p-5 pe-0">
                        {% if ingredient.image %}
                            <img class="img-fluid w-100" src="{{ asset('uploads/images/ingredient/' ~ ingredient.image) }}" alt="Ingredient Image">
                        {% endif %}
                    </div>
                </div>
                <div class="col-lg-6">
                    <h1 class="mb-6">{{ ingredient.nom }}</h1>
                    <p class="mb-6">Quantity: {{ ingredient.qte }}</p>
                    <p>Selling Price: {{ ingredient.prixVente }}</p>
                    <p>Purchase Price: {{ ingredient.prixAchat }}</p>
                    <p>Nutrition ID: {{ ingredient.idNutrition }}</p>
                    <p>State: {{ ingredient.etat }}</p>
                    <p>Quantity Threshold: {{ ingredient.quantiteThreshold }}</p>
                    <div class="d-flex">
                        <a class="btn btn-primary py-3 px-5 me-3" href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}">Edit</a>
                        <form action="{{ path('app_ingredient_delete', {'id': ingredient.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ingredient.id) }}">
                            <button type="submit" class="btn btn-danger py-3 px-5 me-3">Delete</button>
                        </form>
                        <a class="btn btn-secondary py-3 px-5" href="{{ path('app_ingredient_index') }}">
                            <i class="ti-arrow-left"></i>
                            Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}