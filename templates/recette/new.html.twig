{% extends 'backOffice/base.html.twig' %}

{% block title %}New Recette{% endblock %}

{% block body %}
    <h1>Create new Recette</h1>

    <div class="row">
        <div class="col-md-6">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.nom, 'Name') }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    <div class="error-message-new-Ingredient">{{ form_errors(form.nom) }}</div>
                    {{ form_errors(form.nom) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.prix, 'Prix') }}
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                    <div class="error-message-new-Ingredient">{{ form_errors(form.prix) }}</div>
                
                </div>
                <div class="form-group">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    <div class="error-message-new-Ingredient">{{ form_errors(form.description) }}</div>
                </div>
                <div class="form-group">
                    {{ form_label(form.idIngredients, 'Id Ingredients   (ids séparés par des ",") ') }}
                    {{ form_widget(form.idIngredients, {'attr': {'class': 'form-control'}}) }}
                    <div class="error-message-new-Ingredient">{{ form_errors(form.idIngredients) }}</div>
        
                </div>
                <div class="form-group">
                    {{ form_label(form.quantiteIngredients, 'Quantités Ingredients    (quantités séparés par des ",")') }}
                    {{ form_widget(form.quantiteIngredients, {'attr': {'class': 'form-control'}}) }}
                    <div class="error-message-new-Ingredient">{{ form_errors(form.quantiteIngredients) }}</div>
                   
                </div>
                <div class="form-group">
                    {{ form_label(form.image, 'Image') }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control-file'}}) }}
                    <div class="error-message-new-Ingredient">{{ form_errors(form.image) }}</div>
            
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
