{% extends 'backOffice/base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-4 align-items-center">
                <div class="col-lg-6">
                    <div class="about-img position-relative overflow-hidden p-5 pe-0">
                        <img class="img-fluid w-100" src="{{ asset('uploads/images/ingredient/' ~ recette.image) }}" alt="Ingredient Image">
                    </div>
                </div>
                <div class="col-lg-6">
                    <h1 class="mb-6">Recette</h1>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ recette.id }}</td>
                            </tr>
                            <tr>
                                <th>IdUser</th>
                                <td>{{ recette.idUser }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ recette.nom }}</td>
                            </tr>
                            <tr>
                                <th>Prix</th>
                                <td>{{ recette.prix }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ recette.description }}</td>
                            </tr>
                            <tr>
                                <th>IdIngredients</th>
                                <td>{{ recette.idIngredients }}</td>
                            </tr>
                            <tr>
                                <th>QuantiteIngredients</th>
                                <td>{{ recette.quantiteIngredients }}</td>
                            </tr>
                            <tr>
                                <th>IdNutrition</th>
                                <td>{{ recette.idNutrition }}</td>
                            </tr>
                            <tr>
                                <th>Etat</th>
                                <td>{{ recette.etat }}</td>
                            </tr>
                            <tr>
                                <th>Image</th>
                                <td>{{ recette.image }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="d-flex">
                        <a class="btn btn-primary py-3 px-5 me-3" href="{{ path('app_recette_edit', {'id': recette.id}) }}">Edit</a>
                        <form action="{{ path('app_recette_delete', {'id': recette.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recette.id) }}">
                            <button type="submit" class="btn btn-danger py-3 px-5 me-3">Delete</button>
                        </form>
                        <a class="btn btn-secondary py-3 px-5" href="{{ path('app_recette_index') }}">
                            <i class="ti-arrow-left"></i>
                            Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        {% if error_message is defined %}
            const errorMessage = "{{ error_message }}";
            if (errorMessage) {
                alert(errorMessage);
            }
        {% endif %}
    });
</script>
{% endblock %}
